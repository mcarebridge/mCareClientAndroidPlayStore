<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/brick_red" />
            <gradient android:angle="-90" android:endColor="@color/brick_red" android:startColor="@color/brick_red" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#971E05" />
            <solid android:color="#e8d174" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:centerColor="#e39e54" android:centerX="35%" android:endColor="#d64d4d"
                android:startColor="#E8E8E8" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="150dp" android:height="60dp" />
            <stroke android:width="3dp" android:color="#E8E8E8" />
        </shape>
    </item>
</selector>